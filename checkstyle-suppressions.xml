<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
  "-//Puppy Crawl//DTD Suppressions 1.0//EN"
  "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<!-- reference: https://stackoverflow.com/questions/13874582/what-is-the-correct-syntax-to-suppress-specific-checkstyle-rules-on-certain-file -->
<suppressions>
  <suppress checks="com.puppycrawl.tools.checkstyle.checks.javadoc.SummaryJavadocCheck"
    files="."/>
  <suppress checks="com.puppycrawl.tools.checkstyle.checks.naming.AbbreviationAsWordInNameCheck"
    files="."/>
  <suppress checks="com.puppycrawl.tools.checkstyle.checks.javadoc.NonEmptyAtclauseDescriptionCheck"
    files="."/>
  <suppress checks="com.puppycrawl.tools.checkstyle.checks.javadoc.JavadocMethodCheck"
    files="."/>
  <suppress
    checks="com.puppycrawl.tools.checkstyle.checks.javadoc.JavadocTagContinuationIndentationCheck"
    files="."/>
  <suppress checks="com.puppycrawl.tools.checkstyle.checks.javadoc.AtclauseOrderCheck"
    files="."/>
  <suppress checks="com.puppycrawl.tools.checkstyle.checks.javadoc.JavadocParagraphCheck"
    files="."/>
  <suppress checks="com.puppycrawl.tools.checkstyle.checks.javadoc.SingleLineJavadocCheck"
    files="."/>
  <suppress checks="[a-zA-Z0-9]*"
    files="[\\/]fms[\\/]infrastructure[\\/]integration[\\/]gateway[\\/]store[\\/]dto[\\/]"/>
  <suppress checks=".*" files="[/\\]target[/\\]"/>
</suppressions>